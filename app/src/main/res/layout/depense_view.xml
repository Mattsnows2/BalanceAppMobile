<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="7dp"
    android:background="@drawable/cordertauxtechange"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageMontantView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCategorieDepense"
        android:layout_marginStart="300dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:text=""/>


    <TextView
        android:id="@+id/textMontantDepenseView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="300dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textMontantDepenseView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/textMontantDepenseView2"
        android:fontFamily="casual"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textMontantDepenseViewDevise"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/textMontantDepenseView"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="â‚¬"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textDateDepense"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@+id/imageMontantView2"
        android:fontFamily="casual"

        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20dp"


        tools:ignore="NotSibling" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:textSize="20dp"
        android:text=""

        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/white"


        android:id="@+id/textDescriptionDepenseView"
        />











</RelativeLayout>